{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["es2018"],
    "baseUrl": "./src",
    "paths": {
      "Types": ["types"],
      "DiscordSecrets": ["functions/utils/DiscordSecrets"],
      "DiscordBotConstruct": ["constructs/DiscordBotConstruct"],
      "DiscordBotFunction": ["functions/DiscordBotFunction"],
      "Index": ["index"]
      // "ConstructStack": ["lib/construct-stack"],
    },
    "outDir": "dist/",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "src/types.ts"],
  "exclude": ["cdk.out", "outputs.json"]
}
